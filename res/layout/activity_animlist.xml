<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnimListActivity" >

    <TextView
        android:id="@+id/animlist_title"
        android:text="@string/app_name"
        style="@style/ActivityTitle" />

    <ListView
        android:id="@+id/listview_anim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/layout_difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffc0ffc0"
            android:paddingLeft="10dp"
            android:text="@string/label_difficulty_common"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffc0"
            android:paddingLeft="10dp"
            android:text="@string/label_difficulty_harder"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffc0c0"
            android:paddingLeft="10dp"
            android:text="@string/label_difficulty_expert"
            android:textColor="#ff000000"
            android:textSize="20sp" />

    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_definition"
            style="@style/BWButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onButtonDefinitionClicked"
            android:text="@string/menu_definition" />

        <Button
            android:id="@+id/button_settings"
            style="@style/BWButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onButtonSettingsClicked"
            android:text="@string/menu_settings" />

    </LinearLayout>

</LinearLayout>
