<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".LevelFragment" >

    <Button
        android:id="@+id/button_tutorial"
        style="@style/PracticeLevelButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="1sp"
        android:layout_marginTop="1sp"
        android:background="@drawable/level_background_index"
        android:onClick="startTutorial"
        android:text="Tutorial" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <Button
            android:id="@+id/button_basic_1"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_b1b2"
            android:onClick="processClick"
            android:text="Basic 1" />
        <Button
            android:id="@+id/button_basic_2"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_b1b2"
            android:onClick="processClick"
            android:text="Basic 2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <Button
            android:id="@+id/button_mainstream"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_b1b2"
            android:onClick="processClick"
            android:text="Mainstream" />
        <Button
            android:id="@+id/button_plus"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="1sp"
            android:layout_marginLeft="1sp"
            android:background="@drawable/level_background_plus"
            android:onClick="processClick"
            android:text="Plus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <Button
            android:id="@+id/button_a_1"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_a1a2"
            android:onClick="processClick"
            android:text="A-1" />
        <Button
            android:id="@+id/button_a_2"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_a1a2"
            android:onClick="processClick"
            android:text="A-2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <Button
            android:id="@+id/button_c1"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_c1c2"
            android:onClick="processClick"
            android:text="C-1" />
        <Button
            android:id="@+id/button_c2"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_c1c2"
            android:onClick="processClick"
            android:text="C-2" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <Button
            android:id="@+id/button_c3a"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_c1c2"
            android:onClick="processClick"
            android:text="C-3A" />
        <Button
            android:id="@+id/button_c3b"
            style="@style/PracticeLevelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:background="@drawable/level_background_c1c2"
            android:onClick="processClick"
            android:text="C-3B" />
        </LinearLayout>

</LinearLayout>
