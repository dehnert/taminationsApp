<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
      <!-- All customizations that are NOT specific to a particular API-level can go here. -->
      <item name="android:maxLines">1</item>
    </style>

  <style name="ListItem">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:textColor">#ff000000</item>
    <item name="android:background">#ffffffff</item>
    <item name="android:textSize">24sp</item>
    <item name="android:paddingLeft">4sp</item>
    <item name="android:paddingTop">4sp</item>
    <item name="android:paddingBottom">4sp</item>
  </style>

  <style name="IndentedListItem" parent="ListItem">
     <item name="android:paddingLeft">30sp</item>
  </style>

  <style name="ListHeader" parent="ListItem">
    <item name="android:textColor">#ffffffff</item>
    <item name="android:background">#ff804080</item>
    <item name="android:clickable">false</item>
    <item name="android:paddingTop">6sp</item>
    <item name="android:paddingBottom">2sp</item>
  </style>

  <style name="BWButton">
      <item name="android:background">@android:drawable/btn_default</item>
      <item name="android:textColor">#ff000000</item>
      <item name="android:textSize">18sp</item>
      </style>

  <style name="BigBWButton" parent="BWButton">
      <item name="android:textSize">40sp</item>
  </style>

  <style name="LevelButtonBase">
      <item name="android:textColor">@color/text</item>
      <item name="android:textSize">18sp</item>
      <item name="android:textStyle">bold</item>
      <item name="android:gravity">left|center_vertical</item>
      <item name="android:paddingLeft">10sp</item>
  </style>

  <style name="PracticeLevelButtonBase" parent="LevelButtonBase">
      <item name="android:gravity">center</item>
  </style>

  <style name="IndentedLevelButton" parent="LevelButton">
      <item name="android:paddingLeft">30sp</item>
  </style>

  <style name="ActivityTitleText">
    <item name="android:gravity">center</item>
    <item name="android:maxLines">3</item>
    <item name="android:shadowColor">#c0000000</item>
    <item name="android:shadowDx">2</item>
    <item name="android:shadowDy">2</item>
    <item name="android:shadowRadius">1.5</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:textColor">#ffffffff</item>
  </style>

  <style name="ActivityTitle" parent="ActivityTitleText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/title</item>
    <item name="android:drawableLeft">@drawable/ic_launcher</item>
  </style>


  <style name="Difficulty">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:textColor">#ff000000</item>
  </style>

  <style name="Settings0">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Settings1" parent="Settings0">
    <item name="android:background">#ff808080</item>
    <item name="android:paddingBottom">6sp</item>
  </style>

  <style name="Settings2" parent="Settings0">
      <item name="android:background">#fff0f0f0</item>
      <item name="android:paddingLeft">10sp</item>
  </style>

  <style name="PracticeResults">
      <item name="android:textSize">18sp</item>
  </style>

  <style name="PracticeInstructions">
      <item name="android:textSize">24sp</item>
  </style>

  <style name="PracticeLevelButton" parent="LevelButtonBase">
      <item name="android:gravity">center_horizontal|center_vertical</item>
      <item name="android:textSize">24sp</item>
  </style>


</resources>
